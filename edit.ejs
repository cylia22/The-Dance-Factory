<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Dance Organization</h1>
    <div class="col-6 offset-3">
        <form action="/danceOrganizations/<%=danceOrganization._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="danceOrganization[title]"
                    value="<%=danceOrganization.title %>" required>
                <div class="valid-feedback">
                    valid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="danceOrganization[location]"
                    value="<%=danceOrganization.location %>" required>
                <div class="valid-feedback">
                    valid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="danceOrganization[image]"
                    value="<%=danceOrganization.image %>" required>
                <div class="valid-feedback">
                    valid
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Ticket Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="danceOrganization[price]" value="<%=danceOrganization.price %>"
                        required>\<div class="valid-feedback">
                        valid
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="danceOrganization[description]"
                    required><%= danceOrganization.description%></textarea>
                <div class="valid-feedback">
                    valid
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Dance Organization</button>
            </div>
        </form>
        <a href="/danceOrganizations/<%= danceOrganization._id%>">Back To Dance Organizations</a>

    </div>
</div>

