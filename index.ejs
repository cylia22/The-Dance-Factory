<% layout('layouts/boilerplate')%>

<h1>All Dance Organizations</h1>
<div>
    <a href="/danceOrganizations/new">Add Dance Organization</a>
</div>
<% for (let danceOrganization of danceOrganizations){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=danceOrganization.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= danceOrganization.title %> </h5>
                <p class="card-text"><%= danceOrganization.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= danceOrganization.location%></small>
                </p>
                <a class="btn btn-primary" href="/danceOrganizations/<%=danceOrganization._id%>">View <%=danceOrganization.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
        
    
