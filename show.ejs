<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= danceOrganization.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= danceOrganization.title%></h5>
                <p class="card-text"><%= danceOrganization.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= danceOrganization.location%></li>
                <li class="list-group-item">$<%= danceOrganization.price%>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/danceOrganizations/<%=danceOrganization._id%>/edit">Edit</a>
                <form class="d-inline" action="/danceOrganizations/<%=danceOrganization._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="/danceOrganizations/<%= danceOrganization.id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                <label class="form-label"for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">valid</div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% for (let review of danceOrganization.reviews) {%> 
           <div class="card "></div>
           
            <div class="mb-3">
            <p>Rating<%= review.rating  %> </p>
            <p>Review<%= review.body %> </p>     
        </div>
        <% } %> 
    </div>
</div>
